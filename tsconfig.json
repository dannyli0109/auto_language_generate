{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2018",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false,
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "gulpfile.js",
        "dist",
        "build"
    ]
}